enum E_OS_VERSION
{   
	EOV_MICROSOFT_WINDOWS_NT = 0,
	EOV_MICROSOFT_WINDOWS_2K,
	EOV_MICROSOFT_WINDOWS_XP,
	EOV_MICROSOFT_WINDOWS_VISTA,
	EOV_MICROSOFT_WINDOWS_7,
	EOV_MICROSOFT_WINDOWS_95,
	EOV_MICROSOFT_WINDOWS_98,
